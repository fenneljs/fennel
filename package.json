{
  "name": "@fennel/root",
  "version": "0.0.0",
  "description": "Fennel is a task system for node js. Think of Celery (python) but for node.",
  "repository": "https://github.com/fenneljs/fennel",
  "author": "Tycho Tatitscheff",
  "license": "MIT",
  "workspaces": [
    "packages/**"
  ],
  "private": true,
  "devDependencies": {
    "cz-lerna-changelog": "^2.0.2",
    "lerna": "^3.13.4",
    "lerna-semantic-release": "reywright/lerna-semantic-release#7ad032a"
  },
  "scripts": {
    "postinstall": "yarn bootstrap",
    "bootstrap": "lerna bootstrap",
    "postbootstrap": "cd node_modules/lerna-semantic-release && yarn install && cd ../..",
    "lerna-semantic-release": "node_modules/lerna-semantic-release/packages/lerna-semantic-release/bin/lerna-semantic-release.js",
    "bump": "yarn lerna-semantic-release pre && yarn lerna-semantic-release post",
    "publish": "yarn build && yarn lerna-semantic-release perform",
    "build": "lerna run build",
    "test": "lerna run test"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
